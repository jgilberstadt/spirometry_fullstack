<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SpirometerInstructionActivity">

    <Button
        android:id="@+id/startTest2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="100dp"
        android:fontFamily="sans-serif"
        android:onClick="onClickBack"
        android:text="Start Test"
        android:textSize="30sp" />

    <include
        layout="@layout/window_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/instruction2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_above="@+id/imageView4"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-159dp"
        android:gravity="center"
        android:text="Spirometry Instructions"
        android:textColor="#000000"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/instructionExplained2"
        android:layout_width="569dp"
        android:layout_height="175dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="222dp"
        android:gravity="top|center"
        android:text='You will blow exactly seven times. For each blow, you will need to blow for at least six seconds. If you do not blow in time, "Retry" button will pop up.'
        android:textColor="#000000"
        android:textSize="28dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="373dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="159dp"
        app:srcCompat="@drawable/a1aa" />

</RelativeLayout>