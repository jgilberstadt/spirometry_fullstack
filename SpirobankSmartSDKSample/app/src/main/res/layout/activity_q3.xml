<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/window_navigation"
            layout="@layout/window_navigation"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/Q1text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/question_background"
            android:gravity="left"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/q3"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="18sp" />

        <ScrollView
            android:id="@+id/answersSV"
            android:layout_width="match_parent"
            android:background="#92efa9"
            android:layout_below="@+id/Q1text"
            android:layout_above="@+id/window_navigation"
            >

            <LinearLayout
                android:id="@+id/LinRadio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/q1_layout"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/custom_checkbox_background"
                    android:orientation="vertical">
                    <!--android:layout_marginTop="8dp"-->
                    <!--android:layout_marginBottom="8dp"-->
                    <!--android:layout_marginLeft="8dp"-->
                    <!--android:layout_marginRight="8dp">-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textSize="25sp"
                        android:text="Generalized weakness"
                        />

                    <RadioGroup
                        android:id="@+id/q1_rg"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1.5"
                        android:orientation="horizontal">

                        <com.spirometry.spirobanksmartsdksample.classes.ToggleableRadioButton
                            android:id="@+id/c11"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/custom_checkbox_background"
                            android:button="@null"
                            android:gravity="center"
                            android:text="Yes"
                            android:textSize="25sp" />

                        <com.spirometry.spirobanksmartsdksample.classes.ToggleableRadioButton
                            android:id="@+id/c12"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/custom_checkbox_background"
                            android:button="@null"
                            android:gravity="center"
                            android:text="No"
                            android:textSize="25sp" />
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/q2_layout"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/custom_checkbox_background"
                    android:orientation="vertical">
                    <!--android:layout_marginTop="8dp"-->
                    <!--android:layout_marginBottom="8dp"-->
                    <!--android:layout_marginLeft="8dp"-->
                    <!--android:layout_marginRight="8dp">-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textSize="25sp"
                        android:text="Lightheadedness"
                        />

                    <RadioGroup
                        android:id="@+id/q2_rg"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1.5"
                        android:orientation="horizontal">

                        <com.spirometry.spirobanksmartsdksample.classes.ToggleableRadioButton
                            android:id="@+id/c21"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/custom_checkbox_background"
                            android:button="@null"
                            android:gravity="center"
                            android:text="Yes"
                            android:textSize="25sp" />

                        <com.spirometry.spirobanksmartsdksample.classes.ToggleableRadioButton
                            android:id="@+id/c22"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/custom_checkbox_background"
                            android:button="@null"
                            android:gravity="center"
                            android:text="No"
                            android:textSize="25sp" />
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/q3_layout"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/custom_checkbox_background"
                    android:orientation="vertical">
                    <!--android:layout_marginTop="8dp"-->
                    <!--android:layout_marginBottom="8dp"-->
                    <!--android:layout_marginLeft="8dp"-->
                    <!--android:layout_marginRight="8dp">-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textSize="25sp"
                        android:text="Dizziness"
                        />

                    <RadioGroup
                        android:id="@+id/q3_rg"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1.5"
                        android:orientation="horizontal">

                        <com.spirometry.spirobanksmartsdksample.classes.ToggleableRadioButton
                            android:id="@+id/c31"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/custom_checkbox_background"
                            android:button="@null"
                            android:gravity="center"
                            android:text="Yes"
                            android:textSize="25sp" />

                        <com.spirometry.spirobanksmartsdksample.classes.ToggleableRadioButton
                            android:id="@+id/c32"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/custom_checkbox_background"
                            android:button="@null"
                            android:gravity="center"
                            android:text="No"
                            android:textSize="25sp" />
                    </RadioGroup>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>