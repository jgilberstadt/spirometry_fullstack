<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <include
            layout="@layout/window_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_below="@+id/Q2text"
            />

        <TextView
            android:id="@+id/Q2text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="91dp"
            android:layout_weight="1"
            android:background="@color/question_background"
            android:gravity="left"
            android:padding="20dp"
            android:text="@string/q2"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="36sp" />

        <LinearLayout
            android:id="@+id/initialRadio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/window_navigation"
            android:layout_below="@+id/Q2text"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/initialRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="480dp"
                android:layout_marginTop="30dp"
                android:orientation="vertical">

                <com.spirometry.spirobanksmartsdksample.classes.ToggleableRadioButton
                    android:id="@+id/c1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_checkbox_background"
                    android:button="@null"
                    android:gravity="center"
                    android:text="Yes"
                    android:textSize="36sp" />

                <com.spirometry.spirobanksmartsdksample.classes.ToggleableRadioButton
                    android:id="@+id/c2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_checkbox_background"
                    android:button="@null"
                    android:gravity="center"
                    android:text="No"
                    android:textSize="36sp" />

            </RadioGroup>
        </LinearLayout>

        <ScrollView
            android:id="@+id/answersSV"
            android:layout_width="match_parent"
            android:layout_height="800dp"
            android:layout_above="@+id/window_navigation"
            android:layout_below="@+id/Q2text"
            android:background="#92efa9"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/LinRadio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/q1_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/custom_checkbox_background"
                    android:orientation="vertical">
                    <!--android:layout_marginTop="8dp"-->
                    <!--android:layout_marginBottom="8dp"-->
                    <!--android:layout_marginLeft="8dp"-->
                    <!--android:layout_marginRight="8dp">-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="20dp"
                        android:text="Cough"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textSize="40dp" />

                    <RadioGroup
                        android:id="@+id/q1_rg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1.5"
                        android:orientation="horizontal">

                        <com.spirometry.spirobanksmartsdksample.classes.ToggleableRadioButton
                            android:id="@+id/c11"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/custom_checkbox_background"
                            android:button="@null"
                            android:gravity="center"
                            android:padding="20dp"
                            android:text="Yes"
                            android:textSize="40dp" />

                        <com.spirometry.spirobanksmartsdksample.classes.ToggleableRadioButton
                            android:id="@+id/c12"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/custom_checkbox_background"
                            android:button="@null"
                            android:gravity="center"
                            android:padding="20dp"
                            android:text="No"
                            android:textSize="40dp" />
                    </RadioGroup>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/q2_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/custom_checkbox_background"
                    android:orientation="vertical">
                    <!--android:layout_marginTop="8dp"-->
                    <!--android:layout_marginBottom="8dp"-->
                    <!--android:layout_marginLeft="8dp"-->
                    <!--android:layout_marginRight="8dp">-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="20dp"
                        android:text="Cough now producing sputum/mucus"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textSize="40dp" />

                    <RadioGroup
                        android:id="@+id/q2_rg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1.5"
                        android:orientation="horizontal">

                        <com.spirometry.spirobanksmartsdksample.classes.ToggleableRadioButton
                            android:id="@+id/c21"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/custom_checkbox_background"
                            android:button="@null"
                            android:gravity="center"
                            android:padding="20dp"
                            android:text="Yes"
                            android:textSize="40dp" />

                        <com.spirometry.spirobanksmartsdksample.classes.ToggleableRadioButton
                            android:id="@+id/c22"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/custom_checkbox_background"
                            android:button="@null"
                            android:gravity="center"
                            android:padding="20dp"
                            android:text="No"
                            android:textSize="40dp" />
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/q3_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/custom_checkbox_background"
                    android:orientation="vertical">
                    <!--android:layout_marginTop="8dp"-->
                    <!--android:layout_marginBottom="8dp"-->
                    <!--android:layout_marginLeft="8dp"-->
                    <!--android:layout_marginRight="8dp">-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="20dp"
                        android:text="New Wheezing"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textSize="40dp" />

                    <RadioGroup
                        android:id="@+id/q3_rg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1.5"
                        android:orientation="horizontal">

                        <com.spirometry.spirobanksmartsdksample.classes.ToggleableRadioButton
                            android:id="@+id/c31"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/custom_checkbox_background"
                            android:button="@null"
                            android:gravity="center"
                            android:padding="20dp"
                            android:text="Yes"
                            android:textSize="40dp" />

                        <com.spirometry.spirobanksmartsdksample.classes.ToggleableRadioButton
                            android:id="@+id/c32"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/custom_checkbox_background"
                            android:button="@null"
                            android:gravity="center"
                            android:padding="20dp"
                            android:text="No"
                            android:textSize="40dp" />
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/q4_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/custom_checkbox_background"
                    android:orientation="vertical">
                    <!--android:layout_marginTop="8dp"-->
                    <!--android:layout_marginBottom="8dp"-->
                    <!--android:layout_marginLeft="8dp"-->
                    <!--android:layout_marginRight="8dp">-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="20dp"
                        android:text="New shortness of breath"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textSize="40dp" />

                    <RadioGroup
                        android:id="@+id/q4_rg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1.5"
                        android:orientation="horizontal">

                        <com.spirometry.spirobanksmartsdksample.classes.ToggleableRadioButton
                            android:id="@+id/c41"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/custom_checkbox_background"
                            android:button="@null"
                            android:gravity="center"
                            android:padding="20dp"
                            android:text="Yes"
                            android:textSize="40dp" />

                        <com.spirometry.spirobanksmartsdksample.classes.ToggleableRadioButton
                            android:id="@+id/c42"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/custom_checkbox_background"
                            android:button="@null"
                            android:gravity="center"
                            android:padding="20dp"
                            android:text="No"
                            android:textSize="40dp" />
                    </RadioGroup>
                </LinearLayout>


            </LinearLayout>

        </ScrollView>

        <include
            android:id="@+id/window_navigation"
            layout="@layout/window_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp" />


    </RelativeLayout>


</android.support.constraint.ConstraintLayout>